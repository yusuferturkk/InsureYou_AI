@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Hakkımızda Yazı Düzenleme Sayfası</h5>
        </div>
        <form method="post">
            <input type="hidden" asp-for="AboutId" />
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
            <br />
            <button class="btn btn-success">Hakkımızda Yazısını Güncelle</button>
        </form>
    </div>
</div>