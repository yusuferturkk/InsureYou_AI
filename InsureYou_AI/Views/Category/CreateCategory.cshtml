@model Category

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Sigorta Kategori Girişi</h5>
        </div>
        <form method="post">
            <label>Kategori Adı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />
            <button class="btn btn-primary">Kategoriyi Kaydet</button>
        </form>
    </div>
</div>