
@{
    ViewData["Title"] = "CreateTestimonialWithClaudeAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var testimonials = ViewBag.testimonials;
}

<div class="container-mt-5" style="height:750px;">
    <h2>Claude AI ile Oluşturulan Hizmetler</h2>
    <ul class="list-group mt-3">
        @if (testimonials != null)
        {
            foreach (var item in testimonials)
            {
                <li class="list-group-item">@item</li>
            }
        }
        else
        {
            <li class="list-group-item text-danger">Claude'dan Veri Alınamadı: @ViewBag.testimonials</li>
        }
    </ul>
</div>