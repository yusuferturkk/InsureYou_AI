@model List<TrailerVideo>

@{
    ViewData["Title"] = "TrailerVideoList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Ana Sayfa Video Alanı</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="aranacak kelimeler...">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Başlık</th>
                        <th>Videoyu Aç</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td><a href="@item.VideoUrl" class="btn btn-primary">Videoyu Aç</a></td>
                            <td><a href="/TrailerVideo/UpdateTrailerVideo/@item.TrailerVideoId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a></td>
                            <td><a href="/TrailerVideo/DeleteTrailerVideo/@item.TrailerVideoId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a></td>

                        </tr>
                    }


                </tbody>
            </table>
            <a href="/TrailerVideo/CreateTrailerVideo/" class="btn btn-info">Yeni Video Girişi</a>
        </div>
    </div>
</div>