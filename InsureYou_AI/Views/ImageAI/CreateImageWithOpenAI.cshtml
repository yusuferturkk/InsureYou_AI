@model string

@{
    ViewData["Title"] = "CreateImageWithOpenAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">OpenAI ile Görsel Oluşturma</h5>
        </div>
        <form method="post">
            <label>Prompt Girişi Yapınız: </label>
            <input type="text" name="prompt" required class="form-control" />
            <br />
            <button class="btn btn-primary">Görsel Oluştur</button>
        </form>

        @ViewBag.error

        @if (Model != null)
        {
            <h3>Oluşturulan Görsel:</h3>
            <img src="@Model" alt="OpenAI Görseli" style="max-width:512px;" />
        }
    </div>
</div>