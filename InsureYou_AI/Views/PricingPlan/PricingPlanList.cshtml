@model List<PricingPlan>

@{
    ViewData["Title"] = "PricingPlanList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Ödeme Planları Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="Aranacak kelimeler...">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Price</td>
                            <td>@item.IsFeature</td>
                            <td><a href="#" class="btn btn-warning">Durum</a></td>
                            <td><a href="/Message/UpdateMessage/@item.PricingPlanId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a></td>
                            <td><a href="/Message/DeleteMessage/@item.PricingPlanId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a></td>
                        </tr>
                    }


                </tbody>
            </table>
            <a href="/PricingPlan/CreatePricingPlan/" class="btn btn-info">Yeni Fiyat Plan Girişi</a>
        </div>
    </div>
</div>