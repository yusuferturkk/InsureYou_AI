@model List<Article>

@{
    ViewData["Title"] = "ArticleList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Makaleler Sayfası</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="aranacak kelimeler...">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Yazar</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Sitede Gör</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>Yazar Adı</td>
                            <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td><a href="/Article/UpdateArticle/@item.ArticleId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sitede Gör"><i class="bi bi-eye-fill"></i></a></td>
                            <td><a href="/Article/UpdateArticle/@item.ArticleId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a></td>
                            <td><a href="/Article/DeleteArticle/@item.ArticleId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Article/CreateArticle/" class="btn btn-info">Yeni Makale Girişi</a>
        </div>
    </div>
</div>