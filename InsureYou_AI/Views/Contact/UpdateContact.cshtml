@model Contact

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">İletişim Bilgisi Güncelleme Sayfası</h5>
        </div>
        <form method="post">
            <input type="hidden" asp-for="ContactId" />
            <label>Telefon Numarası</label>
            <input type="tel" asp-for="PhoneNumber" class="form-control" />
            <br />
            <label>Email Adresi</label>
            <input type="email" asp-for="Email" class="form-control" />
            <br />
            <label>Adres Bilgisi</label>
            <input type="text" asp-for="Address" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea rows="3" class="form-control" asp-for="Description"></textarea>
            <br />
            <button class="btn btn-success">Bilgileri Kaydet</button>
        </form>
    </div>
</div>